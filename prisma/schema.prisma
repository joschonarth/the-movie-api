generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MovieState {
  TO_WATCH
  WATCHED
  RATED
  RECOMMENDED
  NOT_RECOMMENDED
}

model User {
  id       String @id @default(uuid())
  username String @unique
  password String
  logs     Log[]

  @@map("users")
}

model Movie {
  id           String     @id @default(uuid())
  title        String
  synopsis     String?
  release_year Int
  genre        String
  state        MovieState @default(TO_WATCH)
  rating       Int?
  created_at   DateTime   @default(now())
  logs         Log[]

  @@map("movies")
}

model Log {
  id        String   @id @default(uuid())
  method    String
  url       String
  status    Int
  timestamp DateTime @default(now())
  movie_id  String?  @unique
  movie     Movie?   @relation(fields: [movie_id], references: [id])
  user_id   String?
  user      User?    @relation(fields: [user_id], references: [id])

  @@map("logs")
}
